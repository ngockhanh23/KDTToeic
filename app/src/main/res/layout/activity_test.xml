<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <LinearLayout
        android:id="@+id/lnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvQuestionDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/question_background"
            android:elevation="6dp"
            android:padding="10dp"
            android:text="The crime rate has continued to rise in American cities despite efforts on the part of both government and private citizens to curb ……………."
            android:textColor="#fff"
            android:textSize="20sp" />



        <RadioGroup
            android:id="@+id/tesOptionsQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/tesOpA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="him"
                android:textSize="20dp"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/tesOpB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:minHeight="48dp"
                android:text="them"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/tesOpC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:minHeight="48dp"
                android:text="its"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/tesOpD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="it"
                android:textSize="20dp" />

        </RadioGroup>


        <TextView
            android:id="@+id/cdTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:text="Time" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btTesNextQuestion"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/custom_button"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Câu tiếp theo"
                android:textColor="#fff"
                tools:ignore="TouchTargetSizeCheck" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>