<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="364dp"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:transformPivotY="@dimen/cardview_compat_inset_shadow"
        android:translationX="5dp"
        android:translationZ="2dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/testTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="36dp"
            android:text="Đề thi 1"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/testDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:text="Câu hỏi: 200 câu"
            android:textSize="12dp" />

        <Button
            android:id="@+id/testBtn"
            android:layout_width="113dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/radius_button_background"
            android:text="Vào thi"
            android:textColor="#FFFFFF" />

    </androidx.cardview.widget.CardView>

</LinearLayout>