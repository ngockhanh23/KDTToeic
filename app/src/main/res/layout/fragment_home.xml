<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    style="@style/BACKGROUND"
    tools:context="fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/ivSlide"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:src="@drawable/slider"
            />



        <!--content_2-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/ReadingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Luyện tập"
                android:textSize="20sp"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ReadingTitle"
                android:gravity="center">

                <!--item_1-->
                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:id="@+id/btFillSentence"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="49dp"
                            android:layout_height="50dp"
                            android:src="@drawable/reading_1_icon" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Điền vào câu"
                            android:gravity="center"
                            android:paddingTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- end_item_1-->
                <!--item_2-->
                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:id="@+id/btFillParagraph"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/reading_2_icon"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Điền vào đoạn văn"
                            android:gravity="center"
                            android:paddingTop="10dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- end_item_2-->
                <!--item_3-->
                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:id="@+id/btReadAndUndersand"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/reading_3_icon"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đọc hiểu đoạn văn"
                            android:gravity="center"
                            android:paddingTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- end_item_3-->

            </LinearLayout>


        </RelativeLayout>
        <!-- end content_2-->

        <!--content_3-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/PracticeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Luyện thi"
                android:textSize="20sp"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/PracticeTitle"
                android:gravity="center">

                <!--item_1-->
                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:id="@+id/btTest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/practice_1_icon"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thi thử"
                            android:gravity="center"
                            android:paddingTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- end_item_1-->
                <!--item_2-->
                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:id="@+id/btVocabulary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/baseline_translate_24"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Từ vựng"
                            android:gravity="center"
                            android:paddingTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- end_item_2-->
                <!--item_3-->
                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:id="@+id/btTakeNote"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="46dp"
                            android:src="@drawable/baseline_edit_note_24" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú"
                            android:gravity="center"
                            android:paddingTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- end_item_3-->

            </LinearLayout>


        </RelativeLayout>
        <!-- end content_3-->

    </LinearLayout>

</ScrollView>